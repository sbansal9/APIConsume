@model User
@{ Layout = "_Layout"; ViewBag.Title = "Get User by Id";}

<h2>Get User by Id <a asp-action="Index" class="btn btn-sm btn-primary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label for="id">Id:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get User</button>
    </div>
</form>

@if (Model != null)
{
    <h2>User</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>User Name</th>
                <th>Email Address</th>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.UserId</td>
                <td>@Model.UserName</td>
                <td>@Model.EmailAddress</td>
                <td>@Model.FirstName</td>
                <td>@Model.LastName</td>
            </tr>
        </tbody>
    </table>
}