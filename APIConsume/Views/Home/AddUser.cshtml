@model User
@{ Layout = "_Layout"; ViewBag.Title = "Add a User";}

<h2>Add a User <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddUser" method="post">
    <div class="form-group">
        <label for="Name">User Name:</label>
        <input class="form-control" name="UserName" />
    </div>
    <div class="form-group">
        <label for="FirstName">First Name:</label>
        <input class="form-control" name="FirstName" />
    </div>
    <div class="form-group">
        <label for="LastName">Last Name:</label>
        <input class="form-control" name="LastName" />
    </div>
    <div class="form-group">
        <label for="EmailAddress">Email Address:</label>
        <input class="form-control" name="EmailAddress" />
    </div>
    <div class="form-group">
        <label for="Password">Password:</label>
        <input class="form-control" name="Password" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>

@if (Model != null)
{
    <h2>User</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>User Name</th>
                <th>Email Address</th>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.UserId</td>
                <td>@Model.UserName</td>
                <td>@Model.EmailAddress</td>
                <td>@Model.FirstName</td>
                <td>@Model.LastName</td>
            </tr>
        </tbody>
    </table>
}